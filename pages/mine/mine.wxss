.userinfo-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.userinfo-container1 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100px;
  background: linear-gradient(to bottom right, #ea9518, #ff7000);
}

.userinfo-container2 {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 8px;
  background: white;
  box-shadow: 0rpx 0rpx 1rpx 1rpx lightgray;
}

.userinfo-avatar {
  width: 148rpx;
  height: 148rpx;
  margin-left: 30rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
  margin-left: 20px;
}

.userinfo-btn {
  height: 48px;
  width: 48px;
  background-size: contain;
  background-image: url('data:image/png;base64,');
}

.image_order {
  height: 32px;
  width: 32px;
}

.image_arrow {
  height: 24px;
  width: 24px;
  position: fixed;
  right: 0px;
}
