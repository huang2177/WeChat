/* pages/home/home.wxss */

.banner {
  height: 200px;
  width: 100%;
}

.pro-list-container {
  height: 100%;
  flex-direction: column;
  border-radius: 5px;
  display: flex;
  margin: 10px;
  padding: 10px;
  box-shadow: 0rpx 0rpx 20rpx 1rpx #dbdbdb;
}

.pro-list-container0 {
  height: 100%;
  flex-direction: row;
  display: flex;
  margin-top: 10px;
  justify-content: space-between;
  align-items: center;
}

.pro-list-container1 {
  height: 100%;
  flex-direction: column;
  display: flex;
}

.pro-list-img {
  height: 200px;
  width: 100%;
}

.pro-list-text-name {
  font-size: 16px;
  color: black;
  font-weight: bold;
}

.pro-list-text-pirce {
  font-size: 14px;
  color: red;
}

.pro-list-text-buy {
  font-size: 14px;
  color: white;
  padding: 5px;
  background: #ea9518;
  border-radius: 5px;
}

.floating-container {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background: #123;
  position: fixed;
  bottom: 50px;
  right: 20px;
  align-items: center;
  justify-content: center;
  display: flex;
  box-shadow: 0rpx 0rpx 8rpx 6rpx gray;
}

.floating-button {
  width: 30px;
  height: 30px;
}
